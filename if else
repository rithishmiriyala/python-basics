amount=15000.00
if amount>10000:
    discount=amount*0.3
elif amount>5000:  
    discount=amount*0.2
elif amount>1000:
    discount=amount*0.1  
else:
    discount=0    
final_amount=amount-discount
print(f"amount: {amount:.2f}")
print(f"discount: {discount:.2f}")
print(f"final amount: {final_amount:.2f}")    